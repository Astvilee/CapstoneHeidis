@model Capstone.ViewModels.ManageInvetoryViewModel
@using Capstone.ViewModels
@{
    ViewData["Title"] = "Inventory";
    List<ManageInvetoryViewModel> ListOfProduct = ViewBag.ListOfProduct;
}
<br />
<br />
<br />
<br />
<div class="container">
   @* <div class="row">
        <div class="col-12 text-right">
            <i class="bi bi-plus-circle"></i> <button type="submit">Add product</button>
        </div>
    </div>*@

    <div class="modal" id="UpdateProduct" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Update product</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            
                        </div>
                    </form>
                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Stocks
                    </th>
                    <th class="text-center">
                        Action
                    </th>
                </tr>
            </thead>
          <tbody>
              @foreach (var item in ListOfProduct){
                  <tr>
                      <input type="hidden" value="@item.Id"/>
                      <td>
                          @item.BaseName
                      </td>
                      <td>
                            @item.Price
                      </td>
                      <td>
                          @item.Stocks
                      </td>
                      <td>
                          <button class="edit-user btn btn-success" type="submit"><small>EDIT</small></button>
                          <button class="remove-user btn btn-danger" type="submit"><small>REMOVE</small></button>
                      </td>
                  </tr>
              }
          </tbody>
        </table>
    </div>
</div>
